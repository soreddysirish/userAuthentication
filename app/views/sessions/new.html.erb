<div class ="container">
	<h3> Login form</h3>
		<div class ="row">
			<div class ="col-md-6 col-md-4">
				<%= form_for(:session,url:login_path) do  |f| %>
					<div class="form-group">
						<%= f.label :email %>
						<%= f.email_field :email,class:'form-control' %>
					</div>
					<div class ="form-group">
						<%= f.label :password %>
						<%= f.password_field :password,class:'form-control' %>
					</div>
					<div class ="form-group">
						<%= f.submit "Login",class:'form-control btn btn-primary' %>
					</div>
					<p>New user? <%= link_to "singn_up?", signup_path %></p>
				<% end %>
			</div>	
		</div>
</div>